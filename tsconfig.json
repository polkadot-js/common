{
  "extends": "./node_modules/@polkadot/dev/config/tsconfig",
  "exclude": [
    "build/**/*",
    "**/build/**/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@polkadot/keyring": [ "packages/keyring/src" ],
      "@polkadot/keyring/*": [ "packages/keyring/src/*" ],
      "@polkadot/networks": [ "packages/networks/src" ],
      "@polkadot/networks/*": [ "packages/networks/src/*" ],
      "@polkadot/util-crypto": [ "packages/util-crypto/src" ],
      "@polkadot/util-crypto/*": [ "packages/util-crypto/src/*" ],
      "@polkadot/util": [ "packages/util/src" ],
      "@polkadot/util/*": [ "packages/util/src/*" ],
      "@polkadot/x-fetch": [ "packages/x-fetch/src" ],
      "@polkadot/x-textdecoder": [ "packages/x-textdecoder/src" ],
      "@polkadot/x-textencoder": [ "packages/x-textencoder/src" ],
      "@polkadot/x-ws": [ "packages/x-ws/src" ]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ]
  }
}
